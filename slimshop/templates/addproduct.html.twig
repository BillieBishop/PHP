{% extends "master.html.twig" %}

{% block title %}Add a product{% endblock %}

{% block content %}
<h1>Add a product</h1>

{% if errorList %}
    <ul>
        {% for error in errorList %}
            <li>{{error}}</li>
            {% endfor %}
    </ul>
{% endif %}

<form method="post">
    Name:<input type="text" name="name" value="{{v.name}}"><br><br>
    Description:<input type="text" name="description" value="{{v.description}}"><br><br>
    Image:<input type="file" name="imagePath" value="{{v.imagePath}}"><br><br>
    Price:<input type="text" name="price" value="{{v.price}}"><br><br>
    <input type="submit" value="Register">
</form>
{% endblock %}
